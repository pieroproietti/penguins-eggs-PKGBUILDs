!#/bin/bash

# check if we are on fedora
if [ ! -f /etc/fedora-release ]; then
    echo "This script is only for fedora"
    exit
fi


# check if we are root
if [ "$EUID" -eq 0 ]
  then echo "Please run as normal user"
  exit
fi

# Controlla se il primo argomento Ã¨ vuoto
if [ -z "$1" ]; then
  VERSION=10.0.54
else
  VERSION=$1  
fi


wget https://github.com/pieroproietti/penguins-eggs/archive/refs/tags/v$VERSION.tar.gz -O ~/rpmbuild/SOURCES/penguins-eggs-$VERSION.tar.gz

